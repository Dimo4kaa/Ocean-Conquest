{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["ES6", "DOM"],
    "module": "CommonJS",
    "rootDir": "./",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "../../dist",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"],
  "lib": ["esnext"],
  "ts-node": {
    "esm": true
  }
}
